{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
              "watch",
              "--project",
              ".",
              "--verbose"
            ],
            "cwd": "${workspaceFolder}/OTPHub",
            "stopAtEntry": false,
            "serverReadyAction": {
              "action": "openExternally",
              "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
              "/Views": "${workspaceFolder}/Frontend/Src/Client/Components/Views"
            }
          }
    ]
}